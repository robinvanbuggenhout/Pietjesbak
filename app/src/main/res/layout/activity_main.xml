<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/naamSpeler1"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/naamSpeler2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naamSpeler1" />

    <TextView
        android:id="@+id/puntenSpeler1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/naamSpeler1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puntenSpeler2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/naamSpeler2"
        app:layout_constraintTop_toBottomOf="@+id/puntenSpeler1" />

    <TextView
        android:id="@+id/beurtSpeler1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/puntenSpeler1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beurtSpeler2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/puntenSpeler2"
        app:layout_constraintTop_toBottomOf="@+id/beurtSpeler1" />

    <TextView
        android:id="@+id/worpSpeler1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/beurtSpeler1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/worpSpeler2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/beurtSpeler2"
        app:layout_constraintTop_toBottomOf="@+id/worpSpeler1" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp">

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="20sp"
            android:onClick="checkButton"
            android:text="@string/_1" />

        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:onClick="checkButton"
            android:text="@string/_2" />

        <RadioButton
            android:id="@+id/radio_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:onClick="checkButton"
            android:text="@string/_3" />

    </RadioGroup>

    <Button
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/score"
        android:layout_alignTop="@+id/b_werp"
        android:text="@string/pass"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naamSpeler2" />

    <TextView
        android:id="@+id/t_aantal"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/naamSpeler1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:text="@string/aantal"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/b_werp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/puntenSpeler1"
        android:layout_marginBottom="38dp"
        android:textSize="20sp"
        android:onClick="generate"
        android:text="@string/werp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/worpSpeler2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/score"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/naamSpeler2"
        android:layout_marginEnd="42dp"
        android:text="Score"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>